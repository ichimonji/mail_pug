mixin body
  body(  text = '#000000', bgcolor = '#FFFFFF', link = '#3366cc', vlink = '#3366cc' )
    block

mixin table
  table( border-spacing = 0, border = 0, cellpadding = 0, cellspacing = 0 )&attributes(attributes)
    block

mixin grid(height,arr)
  tr( height = height )
    each val in arr
      td( width = val )

mixin mso
  | <!--[if (mso)|(IE)]><table width="600" align="center" cellpadding="0" cellspacing="0" border="0"><tr><td><![endif]-->
  block
  | <!--[if (mso)|(IE)]></td></tr></table><![endif]-->

-
  var
    left = 'left',
    center = 'center',
    right = 'right',
    top = 'top',
    middle = 'middle',
    bottom = 'bottom',
    blank = '_blank';
